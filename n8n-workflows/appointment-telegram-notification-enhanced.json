    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT p.telegram_user_id, p.full_name, p.phone_number, d.full_name as doctor_name, d.specialty\nFROM patients p\nJOIN appointments a ON p.id = a.patient_id\nJOIN doctors d ON a.doctor_id = d.id\nWHERE a.id = $1::uuid",
        "options": {
          "queryParameters": "={{ $json.record.id }}"
        }
      },
      "id": "supabase-node",
      "name": "Get Patient & Doctor Data",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.4,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "supabase-credential",
          "name": "Supabase Database"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const webhookData = $('Webhook').first().json;\nconst patientData = $('Get Patient & Doctor Data').first().json;\n\n// Use patient data if available, otherwise use webhook data\nconst telegramUserId = patientData?.telegram_user_id || webhookData?.record?.telegram_user_id;\nconst patientName = patientData?.full_name || 'Patient';\nconst doctorName = patientData?.doctor_name || webhookData?.record?.doctor_name || 'Doctor';\nconst specialty = patientData?.specialty || '';\nconst appointmentDate = webhookData?.record?.schedule_date || webhookData?.schedule_date;\nconst appointmentTime = webhookData?.record?.start_time || webhookData?.start_time;\nconst queueToken = webhookData?.record?.queue_token || webhookData?.queue_token;\n\n// Check if patient has Telegram ID\nif (!telegramUserId) {\n  return {\n    json: {\n      skip: true,\n      reason: 'Patient does not have Telegram ID configured'\n    }\n  };\n}\n\n// Format the Telegram message\nconst message = `üéâ *Appointment Confirmed!*\n\nüë§ *Patient:* ${patientName}\nüë®‚Äç‚öïÔ∏è *Doctor:* ${doctorName}${specialty ? `\\nüè• *Specialty:* ${specialty}` : ''}\nüìÖ *Date:* ${appointmentDate}\n‚è∞ *Time:* ${appointmentTime}\nüé´ *Queue Token:* *${queueToken}*\n\nPlease arrive 10 minutes before your appointment.\n\nThank you for choosing EaseHealth!`;\n\nreturn {\n  json: {\n    chat_id: telegramUserId,\n    text: message,\n    parse_mode: 'Markdown',\n    skip: false\n  }\n};"
      },
